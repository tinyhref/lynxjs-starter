  "compilerOptions": {
    "jsx": "preserve",
    "allowImportingTsExtensions": true,

    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist/"],
}
